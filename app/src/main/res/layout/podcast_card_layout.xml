<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="podcast"
            type="io.github.pps5.materialpodcasts.model.Podcast" />

        <variable
            name="selectedListener"
            type="io.github.pps5.materialpodcasts.view.adapter.PodcastCardsAdapter.PodcastSelectedListener" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ripple_effect"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> selectedListener.onSelectedPodcast(podcast)}"
        android:foreground="@drawable/card_ripple_effect">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/artwork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@{podcast.trackName}"
                app:layout_constraintBottom_toTopOf="@id/podcast_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/podcast_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingEnd="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/title"
                    style="@style/SingleLineTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{podcast.trackName}"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@id/artist_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Podcast name" />

                <TextView
                    android:id="@+id/artist_name"
                    style="@style/SingleLineTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{podcast.artistName}"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    tools:text="Artist name" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>